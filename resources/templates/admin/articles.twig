{% extends '@project/base/admin/layout.twig' %}

{% block content %}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th><i class="fa fa-hashtag"></i></th>
                        <th>Název</th>
                        <th>Perex</th>
                        <th>Hodnocení</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td class="align-middle">{{ article.id }}</td>
                            <td class="align-middle">{{ article.title }}</td>
                            <td class="align-middle">{{ article.perex }}</td>
                            <td class="align-middle">{% if article.score is not null %}{{ article.score }} / 10{% else %}Nehodnoceno{% endif %}</td>
                            <td class="align-middle"><a href="{{ path('admin.article.detail', {'id': article.id}) }}" class="btn btn-primary">Detail</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <ul class="pagination justify-content-center mb-4">
            <li class="page-item {{ currentPage == 0 ? 'disabled' : '' }}">
                <a class="page-link" href="{{ path('admin.articles.page', {page: currentPage - 1 >= 0 ? currentPage - 1 : 0}) }}">← Předchozí</a>
            </li>
            <li class="page-item {{ currentPage == lastPage ? 'disabled' : '' }}">
                <a class="page-link" href="{{ path('admin.articles.page', {page: currentPage + 1}) }}">Další →</a>
            </li>
        </ul>
    </div>
{% endblock %}
