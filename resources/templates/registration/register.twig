{% extends '@project/base/public/layout.twig' %}

{% block content %}
    <div class="col-md-6 offset-md-3">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="username">Uživatelské jméno</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Uživatelské jméno" value="{{validator.reports.username.oldValue}}">
            </div>
            <div class="form-group">
                {% if validator.reports.username.errorMessages %}
                    <div class="alert alert-danger" role="alert">
                        {% for message in validator.reports.username.errorMessages %}
                            {{ message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="name">Jméno</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Jméno" value="{{validator.reports.name.oldValue}}">
            </div>
            <div class="form-group">
                {% if validator.reports.name.errorMessages %}
                    <div class="alert alert-danger" role="alert">
                        {% for message in validator.reports.name.errorMessages %}
                            {{ message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="surname">Příjmení</label>
                <input type="text" class="form-control" id="surname" name="surname" placeholder="Příjmení" value="{{validator.reports.surname.oldValue}}">
            </div>
            <div class="form-group">
                {% if validator.reports.surname.errorMessages %}
                    <div class="alert alert-danger" role="alert">
                        {% for message in validator.reports.surname.errorMessages %}
                            {{ message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="email">Emailová adresa</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Emailová adresa" value="{{validator.reports.email.oldValue}}">
            </div>
            <div class="form-group">
                {% if validator.reports.email.errorMessages %}
                    <div class="alert alert-danger" role="alert">
                        {% for message in validator.reports.email.errorMessages %}
                            {{ message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="password">Heslo</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Heslo">
            </div>
            <div class="form-group">
                {% if validator.reports['password|password_again'].errorMessages %}
                    <div class="alert alert-danger" role="alert">
                        {% for message in validator.reports['password|password_again'].errorMessages %}
                            {{ message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="password_again">Heslo znovu</label>
                <input type="password" class="form-control" id="password_again" name="password_again" placeholder="Heslo">
            </div>
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="avatar" name="avatar" accept="image/x-png,image/jpeg">
                    <label class="custom-file-label">{{ validator.reports.image.oldValue ?? article.image }}</label>
                </div>
            </div>
            <div class="form-group">
                {% if validator.reports.avatar.errorMessages %}
                    <div class="alert alert-danger" role="alert">
                        {% for message in validator.reports.avatar.errorMessages %}
                            {{ message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <button type="submit" class="btn btn-primary">Zaregistrovat se</button>
        </form>
    </div>
{% endblock %}
